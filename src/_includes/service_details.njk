---
layout: base.html
---

<!-- slider Area Start-->
<div class="slider-area">
  <div
    class="single-slider hero-overly slider-height2 d-flex align-items-center"
    style="background-image: url('{{titleImg}}'); background-size: cover; background-position: center"
  >
    <div class="container">
      <div class="row">
        <div class="col-lg-10 col-xl-8">
          <div class="hero-cap hero-cap2 pt-120">
            <h2>{{title}}</h2>
            <h3 style="color: antiquewhite">{{titleDescription}}</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- slider Area End-->
<!-- Services Details Start -->
<div class="services-details-area">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="single-services section-padding2">
          <div class="details-img mb-40">
            <img src="{{img}}" alt="Accessories and Additional Components" />
          </div>
          <div class="details-caption">
            <p>{{description}}</p>

            <h3>How can we help?</h3>

            <ol style="padding-left: 20px; margin-bottom: 20px">
              {% for item in accessories %}
              <li style="margin-bottom: 10px; font-size: 16px; color: #333">
                {{ item }}
              </li>
              {% endfor %}
            </ol>
            <p>
              {{info}}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Services Details End -->
